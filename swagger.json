    "paths": {
      "/users": {
        "get": {
          "tags": ["User"],
          "summary": "Get all users",
          "responses": {
            "200": {
              "description": "OK",
              "schema": {
                "$ref": "#/definitions/User"
              }
            }
          }
        },
        "post": {
          "tags": ["User"],
          "summary": "Create a new user",
          "requestBody": {
            "description": "Create user",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }
      },
      "/ticket": {
        "parameters": [
          {
            "name": "auth",
            "in": "header",
            "description": "an authorization header",
            "required": true, 
            "type": "string"
          }
        ],
        "post": {
          "tags": ["Ticket"],
          "summary": "Create a new ticket",
          "requestBody": {
            "description": "Create ticket",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Ticket"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }
      },
      "/ticket/{id}": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Id of the ticket that we want to match"
          }
        ],
        "put": {
          "tags": ["Ticket"],
          "summary": "Update a ticket",
          "requestBody": {
            "description": "Update ticket",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Ticket"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Created"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        },
        "get": {
          "tags": ["Ticket"],
          "summary": "get details for one ticket",
          "responses": {
            "200": {
              "description": "Created"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }  
      },
      "/ticket/{id}/comments": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "description": "Id of the ticket that we want to match"
          }
        ],
        "get": {
          "tags": ["Comment"],
          "summary": "Get comments for one ticket",
          "requestBody": {
            "description": "Update ticket",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Ticket"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Created"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }
      }, 
      "/comment": {
        "post": {
          "tags": ["Comment"],
          "summary": "Create a new comment for one ticket",
          "requestBody": {
            "description": "Create comment for one ticket",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/Comment"
                }
              }
            }
          },
          "responses": {
            "201": {
              "description": "Created"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }
      },
      "/login": {
        "post": {
          "tags": ["Login"],
          "summary": "Login",
          "requestBody": {
            "description": "Login",
            "required": true,
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/definitions/User"
                }
              }
            }
          },
          "responses": {
            "200": {
              "description": "Token"
            },
            "400": {
              "description": "Failed. Bad post data."
            }
          }
        }
      }
  
  
  
    },
  
