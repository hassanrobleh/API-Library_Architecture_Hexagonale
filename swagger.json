        "description": "Local Dev"
      }
    ],
    "securityDefinitions": {
      "Bearer": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
  
      }
  
    },
    "tags": [
      { "name": "User", "description": "API for user" },
      { "name": "Ticket", "description": "API for ticket" },
      { "name": "Comment", "description": "API for comment" },
      { "name": "Login", "description": "API for login" }
    ],
    "consumes": ["application/json"],
