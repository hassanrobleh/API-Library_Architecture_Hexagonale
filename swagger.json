            "type": "string"
          },
          "userId": {
            "type": "number"
          },
          "ticketId": {
            "type": "number"
          }
        }
      },
      "User": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          } 
        }
      }
    },
    "User": {
      "type": "object",
